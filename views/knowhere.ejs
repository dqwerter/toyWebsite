<script>
    // TODO rewrite time display
  window.onload = function show(){
    // https://blog.csdn.net/happy_jijiawei/article/details/47356089
    const date = new Date(); //日期对象
    let weekday;
    switch (date.getDay()) {
      case 1:weekday = "Monday";break;
      case 2:weekday = "Tuesday";break;
      case 3:weekday = "Wednesday";break;
      case 4:weekday = "Thursday";break;
      case 5:weekday = "Friday";break;
      case 6:weekday = "Saturday";break;
      case 7:weekday = "Sunday";break;
    }
    document.getElementById("curr_time").innerHTML = date.toLocaleString() + " " + weekday;
    setTimeout("show()",1000); //设置过1000毫秒就是1秒，调用show方法
    }

</script>
